@model IEnumerable<PriorityMatchingList.Models.EmployeePerformance>

@{
    ViewData["Title"] = "Employee Performance";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5>Performance Records</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Employee</th>
                                <th>Year</th>
                                <th>Rating</th>
                                <th>Rated By</th>
                                <th>Comments</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var performance in Model)
                            {
                                <tr>
                                    <td>
                                        <a asp-controller="Employees" asp-action="Details" asp-route-id="@performance.EmployeeID">
                                            @performance.Employee.FullName
                                        </a>
                                    </td>
                                    <td>@performance.Year</td>
                                    <td>
                                        @if (performance.Rating.HasValue)
                                        {
                                            <span class="badge @(performance.Rating >= 4 ? "bg-success" : performance.Rating >= 3 ? "bg-warning" : "bg-danger")">
                                                @performance.Rating
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not Rated</span>
                                        }
                                    </td>
                                    <td>
                                        @if (performance.RatingGivenBy != null)
                                        {
                                            <a asp-controller="Employees" asp-action="Details" asp-route-id="@performance.RatingGivenByID">
                                                @performance.RatingGivenBy.FullName
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(performance.Comments))
                                        {
                                            <span title="@performance.Comments">
                                                @(performance.Comments.Length > 50 ? performance.Comments.Substring(0, 50) + "..." : performance.Comments)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No comments</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@performance.EmployeePerformanceID" class="btn btn-sm btn-outline-primary">Details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <i class="fas fa-info-circle"></i> No performance records found in the database.
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to Home</a>
        <a asp-controller="Employees" asp-action="Index" class="btn btn-secondary">View Employees</a>
    </div>
</div>
