@model IEnumerable<PriorityMatchingList.Models.User>

@{
    ViewData["Title"] = "Users";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Error
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h5>User Management</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>User ID</th>
                                <th>Employee ID</th>
                                <th>Employee Name</th>
                                <th>Active</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.UserID</td>
                                    <td>@user.EmployeeID</td>
                                    <td>
                                        @if (user.Employee != null)
                                        {
                                            @user.Employee.FullName
                                        }
                                        else
                                        {
                                            <span class="text-muted">Employee not found</span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.Active == true)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else if (user.Active == false)
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Unknown</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@user.UserID" class="btn btn-sm btn-outline-primary">Details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    <i class="fas fa-info-circle"></i> No users found in the database.
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to Home</a>
        <a asp-controller="DatabaseTest" asp-action="TestConnection" class="btn btn-secondary">Test Database Connection</a>
    </div>
</div>
