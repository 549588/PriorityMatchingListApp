@{
    ViewData["Title"] = "ServiceOrder Table Structure Test";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    
    <div class="card">
        <div class="card-header">
            <h5>ServiceOrder Table Column Information</h5>
        </div>
        <div class="card-body">
            @if (ViewBag.Status == "Success")
            {
                <div class="alert alert-success" role="alert">
                    <i class="fas fa-check-circle"></i> @ViewBag.Message
                </div>
                
                <h6>Available Columns:</h6>
                <ul class="list-group">
                    @foreach (var column in ViewBag.ColumnInfo)
                    {
                        <li class="list-group-item">@column</li>
                    }
                </ul>
            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> @ViewBag.Message
                </div>
            }
        </div>
    </div>
    
    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to Home</a>
    </div>
</div>
