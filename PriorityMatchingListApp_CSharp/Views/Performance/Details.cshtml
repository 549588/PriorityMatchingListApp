@model PriorityMatchingList.Models.EmployeePerformance

@{
    ViewData["Title"] = "Performance Details";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>Performance Record</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Employee:</dt>
                        <dd class="col-sm-9">
                            <a asp-controller="Employees" asp-action="Details" asp-route-id="@Model.EmployeeID">
                                @Model.Employee.FullName
                            </a>
                        </dd>

                        <dt class="col-sm-3">Year:</dt>
                        <dd class="col-sm-9">@Model.Year</dd>

                        <dt class="col-sm-3">Rating:</dt>
                        <dd class="col-sm-9">
                            @if (Model.Rating.HasValue)
                            {
                                <span class="badge @(Model.Rating >= 4 ? "bg-success" : Model.Rating >= 3 ? "bg-warning" : "bg-danger") fs-6">
                                    @Model.Rating out of 5
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">Not Rated</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Rated By:</dt>
                        <dd class="col-sm-9">
                            @if (Model.RatingGivenBy != null)
                            {
                                <a asp-controller="Employees" asp-action="Details" asp-route-id="@Model.RatingGivenByID">
                                    @Model.RatingGivenBy.FullName
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Comments))
            {
                <div class="card mt-3">
                    <div class="card-header">
                        <h6>Performance Comments</h6>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@Model.Comments</p>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6>Employee Summary</h6>
                </div>
                <div class="card-body">
                    <p><strong>@Model.Employee.FullName</strong></p>
                    <p class="mb-1"><small class="text-muted">@Model.Employee.Grade - @Model.Employee.Location</small></p>
                    <p class="mb-1"><small class="text-muted">@Model.Employee.EmailID</small></p>
                    @if (Model.Employee.DateofJoin.HasValue)
                    {
                        <p class="mb-0"><small class="text-muted">Joined: @Model.Employee.DateofJoin.Value.ToShortDateString()</small></p>
                    }
                    <div class="mt-2">
                        <a asp-controller="Employees" asp-action="Details" asp-route-id="@Model.EmployeeID" class="btn btn-sm btn-outline-primary">View Employee</a>
                        <a asp-controller="Performance" asp-action="ByEmployee" asp-route-id="@Model.EmployeeID" class="btn btn-sm btn-outline-secondary">All Performance</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-primary">Back to Performance List</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Home</a>
    </div>
</div>
